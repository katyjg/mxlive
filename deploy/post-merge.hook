#!/bin/sh
# This hook automatically sets the version number for MxLIVE
# place this in .git/hooks within the live repository (eg /var/website/lims-website/.git/hooks/)
# to automatically update the MxLIVE version file every time a pull is done

# The file should be renamed 'post-merge' and made executable

exec git describe  | sed 's/\.0-/./g' > mxlive/VERSION
